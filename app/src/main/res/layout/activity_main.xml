<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.saved.crimsosite.localbiz.MainActivity"
    android:orientation="vertical"
    android:background="@color/colorPrimary">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="292dp"
            app:srcCompat="@drawable/logo"
            android:id="@+id/imageView"
            android:scaleType="fitEnd"
            android:adjustViewBounds="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="Email : mrpuffme@mrpuff.in \nMobile :  +91 9823745911 \n"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Info"
            android:layout_weight="1"
            android:padding="25dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:fontFamily="monospace"
            android:typeface="monospace"
            android:textSize="20sp"
            android:textColor="@color/colorAccent"
            android:textStyle="normal|bold"
            android:textAlignment="viewStart"
            android:autoLink="all"
            android:lineSpacingExtra="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">

        <Button
            android:text="general"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button3"
            android:layout_weight="1"
            android:elevation="13dp"
            android:background="@color/colorAccent"
            android:onClick="General"/>

        <view
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            class="android.support.v4.widget.Space"
            android:id="@+id/view"
            android:layout_weight="1" />

        <Button
            android:text="Complaints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            android:layout_weight="1"
            android:elevation="13dp"
            android:background="@color/colorAccent"
            android:onClick="Complain"/>

        <view
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            class="android.support.v4.widget.Space"
            android:id="@+id/view2"
            android:layout_weight="1" />

        <Button
            android:text="Orders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:layout_weight="1"
            android:elevation="14dp"
            android:background="@color/colorAccent"
            android:onClick="Orders"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="117dp"
            android:layout_height="86dp"
            app:srcCompat="@drawable/footer1"
            android:id="@+id/imageView2"
            android:scaleType="fitCenter"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:text=" mrpuff.in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:autoLink="all"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:fontFamily="monospace"
            android:textSize="24sp"
            android:layout_marginStart="17dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>




</LinearLayout>
